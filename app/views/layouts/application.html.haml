!!! strict
%html
  %head
    %title EUPEN
    %meta{ 'http-equiv' => 'Content-Type', :content => 'text/html; charset=UTF-8' }
    = stylesheet_link_tag 'application'
    = javascript_include_tag :defaults, :cache => true

  %body
    #header
      = image_tag  "/images/logo.png", {'class' => 'img'};
      %div{'style' => "float: right; margin-top: 70px; "}
        = link_to "Start |", :controller => 'categories',:action => 'show_catalog'
        = link_to "Uhren |", categories_path, {'style' => "margin-left: 5px;"}
        = link_to "Ankauf |", categories_path, {'style' => "margin-left: 5px;"}
        = link_to "Kundenlogin |", categories_path, {'style' => "margin-left: 5px;"}
        = link_to "Warenkorb", categories_path, {'style' => "margin-left: 5px; margin-right: 5px;"}
    #banner
      = image_tag  "/images/master.png", {'class' => 'img'};
    #catalog
      %h1 Watch
      -#= render :partial => 'category', :collection => @categories
    #main
      - flash.each do |key, msg|
        = content_tag :div, msg, :class => "flash_#{key}"
      %div{'style' => "margin-left: 10px;"}
        &nbsp;
        = yield
        %div{'style' => "clear: both;"}
